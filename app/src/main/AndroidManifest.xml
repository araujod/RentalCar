<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.douglas.rentalcar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".UpdateUser"></activity>
        <activity android:name=".sales.FindReservation" />
        <activity android:name=".SignUp" />

        android:theme="@style/AppTheme"


        <activity android:name=".LogIn" />
        <activity
            android:name=".sales.DriverInfo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".sales.SummaryRent"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".manager.AddNewCar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".manager.CarOption" />
        <activity android:name=".manager.AddCategory" />
        <activity android:name=".manager.EditCategory" />
        <activity android:name=".manager.CategoryOption" />
        <activity android:name=".manager.MainManager" />
        <activity
            android:name=".sales.MainSales"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".sales.SelectCar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".sales.SelectTime"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>